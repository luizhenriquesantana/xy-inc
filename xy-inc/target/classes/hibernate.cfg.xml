<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
		<property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
		<property name="hibernate.connection.username">rik</property>
		<property name="hibernate.connection.password">rik</property>
		<property name="hibernate.connection.url">jdbc:oracle:thin:@192.168.0.28:1521:xe</property>
		<!-- <property name="hibernate.default_schema">xe</property> -->

		<property name="hibernate.current_session_context_class">thread</property>
		<property name="hibernate.format_sql">true</property>

		<property name="connection_pool_size">1</property>
		<property name="hbm2ddl.auto">update</property>
		<property name="show_sql">true</property>

		<mapping class="br.com.zup.xy_inc.model.Product" />
		<!-- -->

	</session-factory>
</hibernate-configuration>
